{
  "name": "splitfree",
  "version": "1.0.0",
  "description": "100% free expense-splitting app - split bills with friends, roommates, and travel companions without limits or paywalls",
  "author": "split it.",
  "license": "UNLICENSED",
  "homepage": "https://splitfree.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/sebrusso/split.git"
  },
  "bugs": {
    "url": "https://github.com/sebrusso/split/issues"
  },
  "keywords": [
    "expense-splitter",
    "bill-splitter",
    "react-native",
    "expo",
    "finance",
    "splitwise-alternative"
  ],
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "jest",
    "test:unit": "jest --testPathPatterns=utils",
    "test:components": "jest --testPathPatterns=components",
    "test:integration": "jest --testPathPatterns=integration",
    "test:coverage": "jest --coverage",
    "setup:token": "./scripts/setup-github-token.sh",
    "rotate:token": "./scripts/rotate-github-token.sh",
    "typecheck": "tsc --noEmit",
    "build:testflight": "eas build --platform ios --profile testflight",
    "submit:testflight": "eas submit --platform ios --profile testflight",
    "deploy:testflight": "npm run build:testflight && npm run submit:testflight",
    "build:sim-release": "eas build --platform ios --profile simulator-release --local",
    "build:local-release": "npx expo run:ios --configuration Release",
    "build:local-debug": "npx expo run:ios",
    "eval:receipts": "npx ts-node tools/receipt-eval/src/index.ts",
    "eval:receipts:sample": "npx ts-node tools/receipt-eval/src/index.ts --sample 10 --verbose",
    "ralph": "./scripts/ralph/ralph.sh",
    "db:seed": "supabase db reset --local",
    "db:seed:remote": "supabase db reset --linked"
  },
  "dependencies": {
    "@clerk/clerk-expo": "^2.0.0",
    "@expo-google-fonts/inter": "^0.4.2",
    "@expo/metro-runtime": "^6.1.2",
    "@expo/vector-icons": "^15.0.3",
    "@op-engineering/op-sqlite": "^15.2.0-beta.0",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-community/netinfo": "^11.4.1",
    "@sentry/react-native": "~7.2.0",
    "@supabase/supabase-js": "^2.89.0",
    "expo": "~54.0.31",
    "expo-application": "~7.0.8",
    "expo-auth-session": "^7.0.10",
    "expo-camera": "~17.0.10",
    "expo-clipboard": "^8.0.8",
    "expo-constants": "~18.0.12",
    "expo-crypto": "^15.0.8",
    "expo-device": "~8.0.10",
    "expo-file-system": "^19.0.21",
    "expo-font": "~14.0.10",
    "expo-image-manipulator": "^14.0.8",
    "expo-image-picker": "^17.0.10",
    "expo-linear-gradient": "~15.0.8",
    "expo-linking": "~8.0.11",
    "expo-localization": "~17.0.8",
    "expo-notifications": "^0.32.16",
    "expo-print": "~15.0.8",
    "expo-router": "~6.0.21",
    "expo-secure-store": "^15.0.8",
    "expo-sharing": "^14.0.8",
    "expo-splash-screen": "~31.0.13",
    "expo-status-bar": "~3.0.9",
    "expo-store-review": "^9.0.9",
    "expo-system-ui": "~6.0.9",
    "expo-updates": "~29.0.16",
    "expo-web-browser": "^15.0.10",
    "posthog-react-native": "^4.17.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-qrcode-svg": "^6.3.21",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "^15.12.1",
    "react-native-web": "^0.21.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.0",
    "@types/react": "~19.1.0",
    "dotenv": "^16.4.0",
    "fast-check": "^4.5.3",
    "jest": "~29.7.0",
    "pg": "^8.17.2",
    "reactotron-react-native": "^5.1.10",
    "ts-jest": "^29.4.6",
    "typescript": "~5.9.2"
  },
  "private": true
}
